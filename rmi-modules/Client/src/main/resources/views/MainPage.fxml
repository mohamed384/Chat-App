                  <Insets right="5.0" top="100.0" />
               </VBox.margin>
            </Circle>
                <Button fx:id="profile" mnemonicParsing="false" onMouseClicked="#goToProfile" prefHeight="51.0" prefWidth="73.0" styleClass="transparent">
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/icons8-person-50.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="20.0" right="5.0" top="30.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="message" mnemonicParsing="false" onAction="#goToMessage" prefHeight="42.0" prefWidth="78.0" styleClass="transparent">
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/icons8-message-50.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="20.0" right="5.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="Contact" mnemonicParsing="false" onAction="#goToContact" prefHeight="42.0" prefWidth="82.0" styleClass="transparent">
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/icons8-group-50.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="20.0" right="5.0" />
                    </VBox.margin>
                </Button>
