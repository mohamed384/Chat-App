                        <StackPane>
                            <children>
                                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../images/icons8-notification-50.png" />
                                    </image>
                                </ImageView>
                                <ImageView fx:id="newNotification" fitHeight="21.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                    <image>
                                        <Image url="@../images/offline.png" />
                                    </image>
                                    <StackPane.margin>
                                        <Insets left="15.0" top="20.0" />
                                    </StackPane.margin>
                                </ImageView>
                            </children>
                        </StackPane>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="30.0" right="5.0" />
                    </VBox.margin>
                </Button>
                <Pane prefHeight="200.0" prefWidth="61.0" />
                <Button fx:id="logOut" mnemonicParsing="false" onAction="#goToLogOut" styleClass="transparent">
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" styleClass="transparent">
                            <image>
                                <Image url="@../images/icons8-logout-50.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER" prefHeight="623.0" prefWidth="840.0" styleClass="light-color" stylesheets="@../styles/MainPage.css" BorderPane.alignment="CENTER">
            <children>
                <Label text="Welcome">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Label>
                <Pane prefHeight="6.0" prefWidth="740.0" styleClass="parent" stylesheets="@../styles/register.css">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </Pane>
                <ImageView fitHeight="458.0" fitWidth="640.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/WhatsApp_Image_2024-01-10_at_13.59.02_79b05b7e-removebg-preview.png" />
                    </image>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                </ImageView>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
