<GridPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllerFx.BroadcastController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="506.0" prefWidth="600.0">
         <children>
            <Label prefHeight="70.0" prefWidth="229.0" text="Broadcast" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="48.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Label>
            <Pane prefHeight="27.0" prefWidth="600.0" styleClass="parent" stylesheets="@../styles/mainStyle.css" />
            <HBox alignment="CENTER_LEFT" prefHeight="405.0" prefWidth="600.0">
               <children>
                  <VBox prefHeight="403.0" prefWidth="362.0">
                     <children>
                        <TextField prefHeight="40.0" prefWidth="322.0" promptText="Title">
                           <VBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="50.0" />
                           </VBox.margin>
                           <font>
                              <Font size="18.0" />
                           </font>
                        </TextField>
                        <TextArea prefHeight="200.0" prefWidth="200.0" promptText="Server Message">
                           <font>
                              <Font size="18.0" />
                           </font>
