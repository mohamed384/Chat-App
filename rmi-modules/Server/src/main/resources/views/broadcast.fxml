                              <Insets left="20.0" right="20.0" />
                           </VBox.margin>
                        </TextArea>
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" prefHeight="74.0" prefWidth="149.0" text="Send">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                     <graphic>
                        <ImageView fitHeight="39.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/icons8-send-100.png" />
                           </image>
                        </ImageView>
