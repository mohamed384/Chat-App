    <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="200.0" />
    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="598.4" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="506.0" prefWidth="263.0" styleClass="parent" stylesheets="@../styles/mainStyle.css" GridPane.rowSpan="3">
         <children>
            <ImageView fitHeight="102.0" fitWidth="202.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/weweq-removebg-preview_1.png" />
               </image>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </ImageView>
            <Pane prefHeight="62.0" prefWidth="198.0" />
            <ToggleButton fx:id="serverControlButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#servercontrolShow" prefHeight="44.0" prefWidth="230.0" styleClass="transparent" text="Server Control" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/home.png" />
                     </image>
                  </ImageView>
               </graphic>
            </ToggleButton>
            <ToggleButton fx:id="statisticalShowButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#statisticalShow" prefHeight="44.0" prefWidth="230.0" styleClass="transparent" text="Statistics" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/icons8-statistic-48.png" />
                     </image>
                  </ImageView>
               </graphic>
            </ToggleButton>
            <ToggleButton fx:id="broadcastShowButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#broadcastShow" prefHeight="44.0" prefWidth="211.0" styleClass="transparent" text="Broadcast" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="39.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/email.png" />
                     </image>
                  </ImageView>
               </graphic>
            </ToggleButton>
            <ToggleButton fx:id="logOut" onAction="#closeServer" alignment="BOTTOM_LEFT" mnemonicParsing="false" prefHeight="44.0" prefWidth="230.0" styleClass="transparent" text="Log Out" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/icons8-log-in-52.png" />
                     </image>
                  </ImageView>
               </graphic>
            </ToggleButton>
         </children>
      </VBox>
   </children>
