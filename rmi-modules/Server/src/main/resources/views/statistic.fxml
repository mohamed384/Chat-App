<GridPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllerFx.StatisticController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="506.0" prefWidth="600.0">
         <children>
            <Label prefHeight="70.0" prefWidth="247.0" text="  Statistics">
               <font>
                  <Font size="48.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Label>
            <Pane prefHeight="30.0" prefWidth="600.0" styleClass="parent" stylesheets="@../styles/mainStyle.css" />
            <TabPane prefHeight="385.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="User State">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <PieChart layoutX="50.0" layoutY="12.0" prefHeight="314.0" prefWidth="500.0" />
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Country">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="350.0" prefWidth="600.0">
                           <children>
                              <LineChart layoutX="61.0" layoutY="20.0" prefHeight="315.0" prefWidth="478.0">
                                <xAxis>
                                  <CategoryAxis side="BOTTOM" />
                                </xAxis>
                                <yAxis>
                                  <NumberAxis side="LEFT" />
                                </yAxis>
                              </LineChart>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab text="Gender">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <PieChart layoutX="50.0" layoutY="17.0" prefHeight="321.0" prefWidth="500.0" />
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
              </tabs>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </TabPane>
            <Pane prefHeight="20.0" prefWidth="372.0" styleClass="parent" />
         </children>
      </VBox>
   </children>
</GridPane>
